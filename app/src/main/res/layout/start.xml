<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/logobg"
	android:gravity="center">
	<RelativeLayout android:layout_width="fill_parent"
		android:id="@+id/relativeLayout1" android:layout_height="fill_parent">
		<ProgressBar style="@style/refreshProgressBar2"
			android:layout_height="wrap_content" android:id="@+id/progressBar1"
			android:layout_centerVertical="true" android:paddingRight="10dip"
			android:layout_width="wrap_content" android:layout_centerHorizontal="true"
			android:paddingLeft="10dip"></ProgressBar>
		<TextView android:layout_below="@+id/progressBar1"
			android:layout_width="wrap_content" android:id="@+id/loading"
			android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:text="@string/please_wait"></TextView>
		<ImageView android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:src="@drawable/logo"
			android:layout_centerHorizontal="true" android:id="@+id/imageView1"
			android:layout_above="@+id/progressBar1"></ImageView>
		<TextView android:text="@string/copyright" android:id="@+id/textView1"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_centerHorizontal="true" android:layout_marginBottom="45dp"></TextView>
		<TextView android:text="http://sms.8eoo.com"
			android:id="@+id/textView2"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_centerHorizontal="true"
			android:layout_marginBottom="22dp"></TextView>
	</RelativeLayout>

</LinearLayout>
